{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block content %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}

    <div class="flex w-2/3 m-auto mb-8 justify-center place-items-center flex-col">
        <h1 class="text-2xl text-gray-darker my-8">Merci de vous connecter</h1>
        <div class="group-control w-2/3 flex  mt-2 ">
            <label for="inputEmail" class="label-control md:text-left">Votre email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="input-control" required autofocus>
        </div>
        <div class="group-control w-2/3 flex mt-2 ">
            <label for="inputPassword" class="label-control md:text-left">Votre password</label>
            <input type="password" name="password" id="inputPassword" class="input-control" required>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="checkbox my-4 w-2/3 justify-center ">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>
        <button class="bg-gray-900 hover:gray-700 w-1/3 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
            Se connecter
        </button>
    </div>
</form>
{% endblock %}
