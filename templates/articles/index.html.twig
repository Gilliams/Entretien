{% extends 'base.html.twig' %}

{% block content %}
	<!--Header-->
	<div class="w-full m-0 p-0 bg-cover bg-bottom" style="background-image:url('cover.jpg'); height: 30vh; max-height:460px;">
		<div class="container max-w-4xl mx-auto pt-16 md:pt-32 text-center break-normal">
			<!--Title-->
			<h1 class="text-white font-extrabold text-3xl md:text-5xl">
				Welcome to my Blog
			</h1>
		</div>
	</div>
	<!--Container-->
	<div class="container px-4 md:px-0 max-w-6xl mx-auto ">
		<div class="mx-0 sm:mx-6">
            {% for row in articles|batch(3) %}
				<div class="bg-gray-200 w-full text-xl md:text-2xl text-gray-800 leading-normal rounded-t">
					<!--Posts Container-->
					<div class="flex flex-wrap justify-between pt-12 -mx-6">
						{% for article in row %}
							{% set articleImage = article.imageName == 'https://picsum.photos/800/600' ? 'https://picsum.photos/800/600' : vich_uploader_asset(article) %}
							<!--1/3 col -->
							<div class="w-full md:w-1/3 p-6 flex flex-col flex-grow flex-shrink">
								<div class="flex-1 bg-white rounded-t rounded-b-none overflow-hidden shadow-lg">
									<a href="{{path('article', {'slug':article.slug })}}" class="flex flex-wrap no-underline hover:no-underline">
										<img src="{{ articleImage }}" class="h-64 w-full rounded-t pb-6">
										<h2 class="w-full font-bold text-xl text-gray-900 px-6">{{article.title}}</h2>
										<p class="text-gray-800 font-serif text-base px-6 mb-5">{{ article.content}}</p>
									</a>
								</div>
								<div class="flex-none mt-auto bg-white rounded-b rounded-t-none overflow-hidden shadow-lg p-6">
									<div class="flex items-center justify-between">
										<div class="div flex row">
											<img class="w-8 h-8 rounded-full mr-4 avatar" data-tippy-content="Author Name" src="http://i.pravatar.cc/300" alt="Avatar of Author">
											<p class="text-gray-800 font-serif text-base pr-6">
												{{ article.author.username}}
											</p>
										</div>
										<p class="text-gray-600 text-xs md:text-sm">{{article.createdAt|date('d-M-Y Ã  H:m')}}</p>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
					<!--/ Post Content-->
				</div>
        	{% endfor %}
		</div>
	</div>
{% endblock %}
